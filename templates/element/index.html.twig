{% extends 'base.html.twig' %}

{% block title %}Element index{% endblock %}

{% block body %}
    <h1>Element index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Type</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Estimation</th>
                <th>ListeCheck</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td>{{ element.id }}</td>
                <td>{{ element.title }}</td>
                <td>{{ element.description }}</td>
                <td>{{ element.type }}</td>
                <td>{{ element.status }}</td>
                <td>{{ element.priority }}</td>
                <td>{{ element.estimation }}</td>
                <td>{{ element.listeCheck }}</td>
                <td>
                    <a href="{{ path('element_show', {'id': element.id}) }}">show</a>
                    <a href="{{ path('element_edit', {'id': element.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('element_new') }}">Create new</a>
{% endblock %}
