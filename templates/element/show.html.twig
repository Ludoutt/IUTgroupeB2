{% extends 'base.html.twig' %}

{% block title %}Element{% endblock %}

{% block content %}
    <h1>Element</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ element.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ element.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ element.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ element.type }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ element.status }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ element.priority }}</td>
            </tr>
            <tr>
                <th>Estimation</th>
                <td>{{ element.estimation }}</td>
            </tr>
            <tr>
                <th>ListeCheck</th>
                <td>{{ element.listeCheck }}</td>
            </tr>
            <tr>
                <th>CriteresTests</th>
                <td>{{ element.criteresTests }}</td>
            </tr>
            <tr>
                <th>Dans le Backlog :</th>
                <td>{{ element.backlog.title }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backlog_show', {'id':element.backlog.id}) }}">Retour au backlog</a>

    {% if is_granted('ROLE_PRODUCT_OWNER') %}
    <a href="{{ path('element_edit', {'id': element.id}) }}">edit</a>
    {{ include('element/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
